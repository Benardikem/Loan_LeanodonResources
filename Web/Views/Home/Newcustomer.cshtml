            </a>

            <a href="@Url.Action("FAQ", "Home" )"
               class="w3l-download" ga-on="click" ga-event-category="Slide Login Form Template" ga-event-action="download-options" ga-event-label="Slide Login Form - Download options" title="Free download requires Backlink">
                @*<span class="w3l-icon - ti-basketball">
                    <svg xmlns="https://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M19 12v7H5v-7H3v7c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-7h-2zm-6 .67l2.59-2.58L17 11.5l-5 5-5-5 1.41-1.41L11 12.67V3h2z" /><path fill="none" d="M0 0h24v24H0z" /></svg>
                </span>*@
                <span class="w3l-text">FAQ</span>
            </a>
        </div>
    </div>


    <!-- main -->
    <div class="w3layouts-main">
        <div class="bg-layer">
            @*<h1>LOAN APPLICATION</h1>*@
            <div class="header-main">
                <div class="main-icon">
                    @*<span class="fa fa-eercast"></span>*@
                    <img src="../images/LR.jpeg" />
                </div>
                <div class="header-left-bottom">

                    @using (Html.BeginForm("Newcustomer", "Home", new { ReturnUrl = ViewBag.ReturnUrl, @class = "comments-form" }, FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Any()))
                        {

                            <div class="alert alert-danger">
                                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                @Html.ValidationSummary(false, "")
                            </div>


                            //if (Model.Message != null)

                        }

                        if (Model != null && !String.IsNullOrEmpty(Model.Message))
                        {
                            <div class="alert alert-success tx-center">
                                @Model.Message
                            </div>
                        }
                        else
                        {
                            <label for="Image"></label>
                        }

                        <div class="icon1">
                            @Html.TextBoxFor(m => m.DisplayName, new { @placeholder = "Enter Full Name (as shown in ID)", @required = "required", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger" })
                        </div>
                        <div class="icon1">
                            <label for="inputLastName"><i class="fas fa-user-tie"></i></label>
                            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @type = "email", placeholder = "Email Address", @required = "required", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
                        </div>
                        <div class="icon1">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @placeholder = "Phone Number", @required = "required", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="icon1">
                            <label for="inputLastName"><i class="fas fa-user-tie"></i></label>
                            @Html.TextBoxFor(m => m.ResidentialAddress, new { @placeholder = "Residential Address in full", @required = "required", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.ResidentialAddress, "", new { @class = "text-danger" })
                        </div>
                        <div class="icon1">
                            <label for="inputLastName"><i class="fas fa-user-tie"></i></label>
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password", placeholder = "Password", @required = "required", autocomplete = "off" })
                            <span class="ion ion-locked form-control-feedback"></span>
                        </div>
                        <div class="icon1">
                            <label for="inputLastName"><i class="fas fa-user-tie"></i></label>
                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @type = "password", placeholder = "Retype Password", @required = "required", autocomplete = "off" })
                            <span class="ion ion-locked form-control-feedback"></span>
                        </div>
                        @*<div class="login-check">
                            <label class="checkbox">
                                <input type="checkbox" name="checkbox" checked=""><i>
                                </i> I agree to the terms of service
                            </label>
                        </div>*@
                        <div class="bottom">
                            <button type="submit" class="btn btn-info btn-block margin-top-10">REGISTER</button>
                        </div>
                    }

                </div>
            </div>


            <!-- copyright -->
            <div class="copyright">
                <p>© @DateTime.Now.Year Loan Application Portal . All rights reserved </p>
            </div>
            <!-- //copyright -->
        </div>

