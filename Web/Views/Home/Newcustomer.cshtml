                        <path d="M0 0h24v24H0z" fill="none" />
                    </svg>
                </span>*@
                <span class="w3l-text">About us</span>
            </a>
            <a href="@Url.Action("Newcustomer", "Home" )" class="w3l-edit" ga-on="click" ga-event-category="Slide Login Form Template" ga-event-action="edit" ga-event-label="Slide Login Form - edit">
                <span class="w3l-icon ti-back-right"></span>
                <svg xmlns="https://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" />
