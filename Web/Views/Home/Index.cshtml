@model Web.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Loanapp - Login</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="Loan Application, LeonDon Resources" />

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>


    <!--Bootstrap 4.0-->
    <link rel="stylesheet" href="~/assets/vendor_components/bootstrap/dist/css/bootstrap.css">

    <!--Bootstrap 4.0-->
    <link rel="stylesheet" href="~/assets/vendor_components/bootstrap/dist/css/bootstrap.min.css">

    <!-- Bootstrap extend-->
    <link rel="stylesheet" href="~/css/bootstrap-extend.css">

    <!-- Custom Theme files -->
    <link href="~/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href="https://fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">

    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <script src="~/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/monetization.js" type="text/javascript"></script>
    <meta name="robots" content="noindex">
    <link rel="stylesheet" href="~/images/demobar_w3_4thDec2019.css" />
    <!-- Demo bar start -->
    <div id="w3lDemoBar" class="w3l-demo-bar">
        <a href="@Url.Action("Index", "Home" )" ga-on="click" ga-event-category="Slide Login Form Template" ga-event-action="view" ga-event-label="Slide Login Form - view">
            <span class="w3l-icon -back">
                <svg xmlns="https://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                    <path opacity=".87" fill="none" d="M0 0h24v24H0V0z" />
                    <path d="M16.62 2.99c-.49-.49-1.28-.49-1.77 0L6.54 11.3c-.39.39-.39 1.02 0 1.41l8.31 8.31c.49.49 1.28.49 1.77 0s.49-1.28 0-1.77L9.38 12l7.25-7.25c.48-.48.48-1.28-.01-1.76z" />
                </svg>
            </span>
            <span class="w3l-text">Home (Login)</span>
        </a>
        @*<a href="https://w3layouts.com/" class="w3l-logo">W3layouts</a>*@
        <div class="w3l-template-options">
            <a href="@Url.Action("Aboutus", "Home" )"
               class="w3l-edit" ga-on="click" ga-event-category="Slide Login Form Template" ga-event-action="edit" ga-event-label="Slide Login Form - edit">
                <span class="w3l-icon -edit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                        <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" />
                        <path d="M0 0h24v24H0z" fill="none" />
                    </svg>
                </span>
                <span class="w3l-text">About us</span>
            </a>
            <a href="@Url.Action("Newcustomer", "Home" )" class="w3l-edit" ga-on="click" ga-event-category="Slide Login Form Template" ga-event-action="edit" ga-event-label="Slide Login Form - edit">
                <span class="w3l-icon ti-back-right"></span>
                <svg xmlns="https://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" />
                    <path d="M0 0h24v24H0z" fill="none" />
                </svg>
                <span class="w3l-text">New Customers</span>
            </a>

            <a href="@Url.Action("FAQ", "Home" )"
               class="w3l-download" ga-on="click" ga-event-category="Slide Login Form Template" ga-event-action="download-options" ga-event-label="Slide Login Form - Download options" title="Free download requires Backlink">
                <span class="w3l-icon - ti-basketball">
                    <svg xmlns="https://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M19 12v7H5v-7H3v7c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-7h-2zm-6 .67l2.59-2.58L17 11.5l-5 5-5-5 1.41-1.41L11 12.67V3h2z" /><path fill="none" d="M0 0h24v24H0z" /></svg>
                </span>
                <span class="w3l-text">FAQ</span>
            </a>
        </div>
    </div>


    <!-- main -->
    <div class="w3layouts-main">
        <div class="bg-layer">
            @*<h1>LOAN APPLICATION</h1>*@
            <div class="header-main">
                <div class="main-icon">
                    @*<span class="fa fa-eercast"></span>*@
                    <img src="../images/LR.jpeg" />
                </div>
                <div class="header-left-bottom">
                    @using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Any()))
                        {
                            <div class="alert alert-danger">
                                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                @Html.ValidationSummary(false, "")
                            </div>
                        }                       
                        <div class="icon1">
                            @Html.TextBoxFor(m => m.CustomerID, new { type = "text", placeholder = "Enter your Customer ID", @required = "required", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.CustomerID, "", new { @class = "text-danger" })
                            <span class="ion ion-email form-control-feedback"></span>
                        </div>
                        <div class="icon1">
                            @Html.PasswordFor(m => m.Password, new { type = "password", placeholder = "Enter your password", @required = "required" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            <span class="ion ion-locked form-control-feedback"></span>
                        </div>
                        <div class="login-check">
                            <label class="checkbox">
                                <input type="checkbox" name="checkbox" checked=""><i>
                                </i> Keep me logged in
                            </label>
                        </div>
                        <div class="bottom">
                            <button type="submit" class="btn btn-info btn-block margin-top-10">LOGIN</button>
                        </div>
                        <div class="links">
                            <p><a href="#">Forgot Password?</a></p>
                            <p class="right"><a href="@Url.Action("Newcustomer", "Home" )">New User? Register</a></p>
                            <div class="clear"></div>
                        </div>
                    }

                    @*<form action="#" method="post">
                            <div class="icon1">
                                <span class="fa fa-user"></span>
                                <input type="email" placeholder="Email Address" required="" />
                            </div>
                            <div class="icon1">
                                <span class="fa fa-lock"></span>
                                <input type="password" placeholder="Password" required="" />
                            </div>
                            <div class="login-check">
                                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i> Keep me logged in</label>
                            </div>
                            <div class="bottom">
                                <button class="btn">Log In</button>
                            </div>
                            <div class="links">
                                <p><a href="#">Forgot Password?</a></p>
                                <p class="right"><a href="#">New User? Register</a></p>
                                <div class="clear"></div>
                            </div>
                        </form>*@
                </div>
            </div>


            <!-- copyright -->
            <div class="copyright">
                <p>© @DateTime.Now.Year Loan Application Portal . All rights reserved </p>
            </div>
            <!-- //copyright -->
        </div>
    </div>
</body>
</html>





