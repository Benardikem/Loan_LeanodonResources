@model Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

@section breadcrumb {
    <li class="breadcrumb-item active" aria-current="page">Change Password</li>
}


@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(c => c.Username)
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="box box-solid bg-black">                
                <div class="box-body">
                    <div class="row">
                        <div class="col-12"> 
                            <div class="form-layout">
                                <div class="row">
                                    <div class="col-12">
                                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                                        @if (!string.IsNullOrEmpty(Model.Message))
                                        {
                                            <div class="alert alert-primary tx-center">
                                                @Model.Message
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Old Password</label>
                                    <div class="col-sm-8">
                                        @Html.PasswordFor(c => c.OldPassword, new { placeholder = "Enter old password", @required = "required", autocomplete = "off", @class = "form-control" })
                                    </div>
                                    <div class="col-sm-4 tx-danger">@Html.ValidationMessageFor(model => model.OldPassword)</div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">New Password</label>
                                    <div class="col-sm-8">
                                        @Html.PasswordFor(c => c.NewPassword, new { placeholder = "Enter new password", @required = "required", autocomplete = "off", @class = "form-control" })
                                    </div>
                                    <div class="col-sm-4 tx-danger">@Html.ValidationMessageFor(model => model.NewPassword)</div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Confirm Password</label>
                                    <div class="col-sm-8">
                                        @Html.PasswordFor(c => c.ConfirmPassword, new { placeholder = "Confirm password", @required = "required", autocomplete = "off", @class = "form-control" })
                                    </div>
                                    <div class="col-sm-4 tx-danger">@Html.ValidationMessageFor(model => model.ConfirmPassword)</div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="form-layout-footer" style="text-align:center;">
                                        <button type="submit" class="btn btn-warning bd-0">Change Password</button>
                                    </div><!-- form-layout-footer -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

