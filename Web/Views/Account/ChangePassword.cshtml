@model Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

@section breadcrumb {
    <li class="breadcrumb-item active" aria-current="page">Change Password</li>
}
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="box box-solid bg-dark">
                <div class="box-header with-border">
                    <h3 class="box-title">Manage Loans</h3>
                    <h6 class="box-subtitle">Export data to Copy, CSV, Excel, PDF & Print</h6>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(c => c.Username)
                            <div class="row">
                                <div class="col-9">
                                    @Html.ValidationSummary(true, @Model.Message, new { @class = "alert alert-danger" })
                                    @if (!string.IsNullOrEmpty(Model.Message))
                                    {
                                        <div class="alert alert-primary tx-center">
                                            @Model.Message
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label for="BusinessName">Old Password</label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.PasswordFor(c => c.OldPassword, new { placeholder = "Enter old password", @required = "required", autocomplete = "off", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.OldPassword)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label for="BusinessName">New Password</label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.PasswordFor(c => c.NewPassword, new { placeholder = "Enter new password", @required = "required", autocomplete = "off", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.NewPassword)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label for="BusinessName">Confirm Password</label>
                                    </div>
                                    <div class="col-md-9">
                                        @Html.PasswordFor(c => c.ConfirmPassword, new { placeholder = "Confirm Password", @required = "required", autocomplete = "off", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.NewPassword)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group" style="text-align:center;">
                                            <button type="submit" class="btn btn-outline-primary">Save changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

