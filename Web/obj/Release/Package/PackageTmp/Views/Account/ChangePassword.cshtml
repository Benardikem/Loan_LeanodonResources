@model Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

@section breadcrumb {
    <li class="breadcrumb-item active" aria-current="page">Change Password</li>
}
<div class="section-wrapper">
    <label class="section-title">Change Password</label>
    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(c => c.Username)
        <div class="form-layout">
            <div class="row">
                <div class="col-12">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-primary tx-center">
                            @Model.Message
                        </div>
                    }
                </div>
            </div>
            <div class="row mg-t-25">
                <label class="col-sm-3 form-control-label">
                    <span class="tx-danger">*</span> Old Password:
                </label>
                <div class="col-sm-5 mg-t-10 mg-sm-t-0">
                    @Html.PasswordFor(c => c.OldPassword, new { placeholder = "Enter old password", @required = "required", autocomplete = "off", @class = "form-control" })
                </div>
                <div class="col-sm-4 tx-danger">@Html.ValidationMessageFor(model => model.OldPassword)</div>
            </div><!-- row -->
            <div class="row mg-t-25">
                <label class="col-sm-3 form-control-label">
                    <span class="tx-danger">*</span> New Password:
                </label>
                <div class="col-sm-5 mg-t-10 mg-sm-t-0">
                    @Html.PasswordFor(c => c.NewPassword, new { placeholder = "Enter new password", @required = "required", autocomplete = "off", @class = "form-control" })
                </div>
                <div class="col-sm-4 tx-danger">@Html.ValidationMessageFor(model => model.NewPassword)</div>
            </div><!-- row -->
            <div class="row mg-t-25">
                <label class="col-sm-3 form-control-label">
                    <span class="tx-danger">*</span> Confirm Password:
                </label>
                <div class="col-sm-5 mg-t-10 mg-sm-t-0">
                    @Html.PasswordFor(c => c.ConfirmPassword, new { placeholder = "Confirm password", @required = "required", autocomplete = "off", @class = "form-control" })
                </div>
                <div class="col-sm-4 tx-danger">@Html.ValidationMessageFor(model => model.ConfirmPassword)</div>
            </div><!-- row -->
            <div class="row mg-t-30">
                <div class="form-layout-footer">
                    <button type="submit" class="btn btn-primary bd-0">Change Password</button>
                </div><!-- form-layout-footer -->
            </div>
        </div><!-- form-layout -->
    }
</div><!-- section-wrapper -->
